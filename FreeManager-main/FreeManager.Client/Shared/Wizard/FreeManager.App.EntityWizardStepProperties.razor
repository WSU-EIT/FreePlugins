@code {
    [Parameter] public List<DataObjects.PropertyDefinition> Properties { get; set; } = new();
    [Parameter] public EventCallback<List<DataObjects.PropertyDefinition>> PropertiesChanged { get; set; }

    [Parameter] public List<DataObjects.EnumDefinition> Enums { get; set; } = new();
    [Parameter] public EventCallback<List<DataObjects.EnumDefinition>> EnumsChanged { get; set; }

    [Parameter] public string EntityName { get; set; } = "";
    [Parameter] public string PrimaryKeyType { get; set; } = "Guid";

    private bool _showPropertyModal = false;
    private bool _showEnumModal = false;
    private bool _showPreview = false;
    private DataObjects.PropertyDefinition _editingProperty = new();
    private DataObjects.EnumDefinition _editingEnum = new();
    private string _viewMode = "compact";

    private List<Guid> _importedFieldIds = new();

    // Modal handlers
    private void OnPropertyModalChanged(bool value) => _showPropertyModal = value;
    private void OnPropertyChanged(DataObjects.PropertyDefinition value) => _editingProperty = value;
    private void OnEnumModalChanged(bool value) => _showEnumModal = value;
    private void OnEnumDefChanged(DataObjects.EnumDefinition value) => _editingEnum = value;

    private string GetTypeDisplay(DataObjects.PropertyDefinition prop) {
        var type = prop.Type;
        if (prop.IsNullable && !type.EndsWith("?")) {
            type += "?";
        }
        return type;
    }

    // ============================================================
    // SNIPPET INSERT
    // ============================================================

    private async Task InsertSnippet(DataObjects.PropertySnippet snippet) {
        int addedCount = 0;
        foreach (var propDef in snippet.Properties) {
            if (!Properties.Any(p => p.Name == propDef.Name)) {
                Properties.Add(new DataObjects.PropertyDefinition {
                    Id = Guid.NewGuid(),
                    Name = propDef.Name,
                    Type = propDef.Type,
                    IsRequired = propDef.IsRequired,
                    IsNullable = propDef.IsNullable,
                    DefaultValue = propDef.DefaultValue,
                    MaxLength = propDef.MaxLength,
                    IsSystemField = propDef.IsSystemField,
                    Description = propDef.Description,
                    IsFilterable = propDef.IsFilterable,
                    SortOrder = Properties.Count
                });
                addedCount++;
            }
        }
        if (addedCount > 0) {
            await PropertiesChanged.InvokeAsync(Properties);
        }
    }

    // ============================================================
    // PROPERTY CRUD
    // ============================================================

    private void AddProperty() {
        _editingProperty = new DataObjects.PropertyDefinition {
            SortOrder = Properties.Count,
            IsFilterable = true
        };
        _showPropertyModal = true;
    }

    private void EditProperty(DataObjects.PropertyDefinition prop) {
        _editingProperty = new DataObjects.PropertyDefinition {
            Id = prop.Id,
            Name = prop.Name,
            Type = prop.Type,
            IsRequired = prop.IsRequired,
            IsNullable = prop.IsNullable,
            DefaultValue = prop.DefaultValue,
            MaxLength = prop.MaxLength,
            EnumName = prop.EnumName,
            SortOrder = prop.SortOrder,
            IsPrimaryKey = prop.IsPrimaryKey,
            IsSystemField = prop.IsSystemField,
            Description = prop.Description,
            IsFilterable = prop.IsFilterable,
            FilterType = prop.FilterType
        };
        _showPropertyModal = true;
    }

    private async Task SaveProperty(DataObjects.PropertyDefinition prop) {
        var existing = Properties.FirstOrDefault(p => p.Id == prop.Id);
        if (existing != null) {
            // Update existing
            var index = Properties.IndexOf(existing);
            Properties[index] = prop;
        } else {
            // Add new
            Properties.Add(prop);
        }
        await PropertiesChanged.InvokeAsync(Properties);
        _showPropertyModal = false;
    }

    private async Task DeleteProperty(DataObjects.PropertyDefinition prop) {
        Properties.Remove(prop);
        await PropertiesChanged.InvokeAsync(Properties);
    }

    private async Task DuplicateProperty(DataObjects.PropertyDefinition prop) {
        var newProp = new DataObjects.PropertyDefinition {
            Id = Guid.NewGuid(),
            Name = prop.Name + " Copy",
            Type = prop.Type,
            IsRequired = prop.IsRequired,
            IsNullable = prop.IsNullable,
            DefaultValue = prop.DefaultValue,
            MaxLength = prop.MaxLength,
            IsSystemField = prop.IsSystemField,
            Description = prop.Description,
            IsFilterable = prop.IsFilterable,
            SortOrder = Properties.Count
        };
        Properties.Add(newProp);
        await PropertiesChanged.InvokeAsync(Properties);
    }

    // ============================================================
    // ENUM CRUD
    // ============================================================

    private void AddEnum() {
        _editingEnum = new DataObjects.EnumDefinition();
        _showEnumModal = true;
    }

    private void AddEnumFromProperty(string enumName) {
        _editingEnum = new DataObjects.EnumDefinition { Name = enumName };
        _showEnumModal = true;
    }

    private void EditEnum(DataObjects.EnumDefinition enumDef) {
        _editingEnum = new DataObjects.EnumDefinition {
            Id = enumDef.Id,
            Name = enumDef.Name,
            Values = new List<string>(enumDef.Values),
            DefaultValue = enumDef.DefaultValue
        };
        _showEnumModal = true;
    }

    private async Task SaveEnum(DataObjects.EnumDefinition enumDef) {
        var existing = Enums.FirstOrDefault(e => e.Id == enumDef.Id);
        if (existing != null) {
            var index = Enums.IndexOf(existing);
            Enums[index] = enumDef;
        } else {
            Enums.Add(enumDef);
        }
        await EnumsChanged.InvokeAsync(Enums);
        _showEnumModal = false;
    }

    private async Task DeleteEnum(DataObjects.EnumDefinition enumDef) {
        Enums.Remove(enumDef);
        // Also remove any properties using this enum
        var propsToRemove = Properties.Where(p => p.EnumName == enumDef.Name).ToList();
        foreach (var prop in propsToRemove) {
            Properties.Remove(prop);
        }
        await EnumsChanged.InvokeAsync(Enums);
        await PropertiesChanged.InvokeAsync(Properties);
    }

    // ============================================================
    // INLINE EDITING (UX Polish)
    // ============================================================

    private Guid? _inlineEditingMaxLengthId = null;

    private async Task ToggleRequired(DataObjects.PropertyDefinition prop) {
        prop.IsRequired = !prop.IsRequired;
        prop.IsNullable = !prop.IsRequired;
        await PropertiesChanged.InvokeAsync(Properties);
    }

    private void EditMaxLengthInline(DataObjects.PropertyDefinition prop) {
        if (prop.Type == "string") {
            _inlineEditingMaxLengthId = prop.Id;
        }
    }

    private async Task SaveMaxLengthInline(DataObjects.PropertyDefinition prop, ChangeEventArgs e) {
        if (int.TryParse(e.Value?.ToString(), out int maxLen) && maxLen > 0) {
            prop.MaxLength = maxLen;
        } else {
            prop.MaxLength = null;
        }
        _inlineEditingMaxLengthId = null;
        await PropertiesChanged.InvokeAsync(Properties);
    }

    private void CancelInlineEdit() {
        _inlineEditingMaxLengthId = null;
    }

    // ============================================================
    // REORDER
    // ============================================================

    private async Task MovePropertyUp(DataObjects.PropertyDefinition prop) {
        var sortedProps = Properties.OrderBy(p => p.SortOrder).ToList();
        var index = sortedProps.IndexOf(prop);
        if (index > 0) {
            // Swap sort orders with the previous property
            var prevProp = sortedProps[index - 1];
            if (!prevProp.IsPrimaryKey) {
                var tempOrder = prop.SortOrder;
                prop.SortOrder = prevProp.SortOrder;
                prevProp.SortOrder = tempOrder;
                await PropertiesChanged.InvokeAsync(Properties);
            }
        }
    }

    private async Task MovePropertyDown(DataObjects.PropertyDefinition prop) {
        var sortedProps = Properties.OrderBy(p => p.SortOrder).ToList();
        var index = sortedProps.IndexOf(prop);
        if (index < sortedProps.Count - 1) {
            // Swap sort orders with the next property
            var nextProp = sortedProps[index + 1];
            var tempOrder = prop.SortOrder;
            prop.SortOrder = nextProp.SortOrder;
            nextProp.SortOrder = tempOrder;
            await PropertiesChanged.InvokeAsync(Properties);
        }
    }

    // ============================================================
    // IMPORT SUPPORT
    // ============================================================

    /// <summary>
    /// Mark fields as imported (called by parent after import).
    /// </summary>
    public void MarkFieldsAsImported(IEnumerable<Guid> fieldIds) {
        _importedFieldIds = fieldIds.ToList();
        StateHasChanged();
    }

    /// <summary>
    /// Clear import highlighting.
    /// </summary>
    public void ClearImportHighlighting() {
        _importedFieldIds.Clear();
        StateHasChanged();
    }
}
