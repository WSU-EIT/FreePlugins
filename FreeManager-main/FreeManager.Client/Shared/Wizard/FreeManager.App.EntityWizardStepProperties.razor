@* EntityWizardStepProperties.App.razor - Step 3: Define Properties *@
@* Improved UX: Snippet panel, view toggle, improved layout *@

<div class="row">
    <div class="col-lg-7">
        @* Property List *@
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>
                    <i class="fa-solid fa-list-check me-1"></i>
                    Properties (@Properties.Count)
                </span>
                <div class="d-flex gap-2">
                    @* View Mode Toggle *@
                    <div class="btn-group btn-group-sm">
                        <button class="btn @(_viewMode == "compact" ? "btn-secondary" : "btn-outline-secondary")" 
                                @onclick="@(() => _viewMode = "compact")"
                                title="Compact View">
                            <i class="fa-solid fa-list"></i>
                        </button>
                        <button class="btn @(_viewMode == "expanded" ? "btn-secondary" : "btn-outline-secondary")" 
                                @onclick="@(() => _viewMode = "expanded")"
                                title="Expanded View">
                            <i class="fa-solid fa-table-list"></i>
                        </button>
                    </div>
                    <button class="btn btn-primary btn-sm" @onclick="AddProperty">
                        <i class="fa-solid fa-plus me-1"></i>
                        Add Property
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 50px;" class="text-center">
                                    <i class="fa-solid fa-sort text-muted" title="Reorder"></i>
                                </th>
                                <th>Name</th>
                                <th style="width: 120px;">Type</th>
                                @if (_viewMode == "expanded") {
                                    <th style="width: 80px;">MaxLen</th>
                                    <th style="width: 100px;">Default</th>
                                }
                                <th style="width: 70px;" class="text-center">Req</th>
                                <th style="width: 100px;" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Properties.Count == 0) {
                                <tr>
                                    <td colspan="@(_viewMode == "expanded" ? 7 : 5)" class="text-center text-muted py-4">
                                        <i class="fa-solid fa-inbox fa-2x mb-2 d-block opacity-50"></i>
                                        <div>No properties defined yet.</div>
                                        <div class="mt-2">
                                            <button class="btn btn-outline-primary btn-sm me-2" @onclick="AddProperty">
                                                <i class="fa-solid fa-plus me-1"></i>
                                                Add Property
                                            </button>
                                            <span class="text-muted">or use snippets →</span>
                                        </div>
                                    </td>
                                </tr>
                            }
                            @{ var sortedProps = Properties.OrderBy(p => p.SortOrder).ThenBy(p => p.Name).ToList(); }
                            @for (int i = 0; i < sortedProps.Count; i++) {
                                var prop = sortedProps[i];
                                var index = i;
                                var isImported = _importedFieldIds.Contains(prop.Id);
                                var canMoveUp = index > 0 && !prop.IsPrimaryKey && !sortedProps[index - 1].IsPrimaryKey;
                                var canMoveDown = index < sortedProps.Count - 1 && !prop.IsPrimaryKey;
                                <tr class="property-row @(prop.IsSystemField ? "table-secondary" : "") @(prop.IsPrimaryKey ? "table-warning" : "") @(isImported ? "imported-field" : "")">
                                    <td class="text-center">
                                        @if (!prop.IsPrimaryKey && !prop.IsSystemField) {
                                            <div class="btn-group-vertical btn-group-sm reorder-buttons">
                                                <button class="btn btn-sm btn-link p-0 @(canMoveUp ? "" : "invisible")" 
                                                        @onclick="@(() => MovePropertyUp(prop))" title="Move up">
                                                    <i class="fa-solid fa-chevron-up"></i>
                                                </button>
                                                <button class="btn btn-sm btn-link p-0 @(canMoveDown ? "" : "invisible")" 
                                                        @onclick="@(() => MovePropertyDown(prop))" title="Move down">
                                                    <i class="fa-solid fa-chevron-down"></i>
                                                </button>
                                            </div>
                                        } else if (prop.IsPrimaryKey) {
                                            <i class="fa-solid fa-key text-warning" title="Primary Key"></i>
                                        } else {
                                            <i class="fa-solid fa-cog text-muted" title="System Field"></i>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <strong>@prop.Name</strong>
                                                @if (prop.IsRequired) {
                                                    <span class="text-danger ms-1">*</span>
                                                }
                                                @if (_viewMode == "expanded" && !string.IsNullOrWhiteSpace(prop.Description)) {
                                                    <br/><small class="text-muted">@prop.Description</small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @{ var typeInfo = DataObjects.PropertyTypes.Get(prop.Type.Replace("enum:", "")); }
                                        @if (prop.Type.StartsWith("enum:")) {
                                            <span class="badge bg-danger">
                                                <i class="fa-solid fa-list me-1"></i>
                                                @prop.EnumName
                                            </span>
                                        } else {
                                            <span class="badge @(typeInfo?.TileColorClass ?? "bg-secondary")">
                                                @GetTypeDisplay(prop)
                                            </span>
                                            @if (prop.MaxLength.HasValue) {
                                                <span class="badge bg-light text-dark ms-1 maxlen-badge" 
                                                      @onclick="@(() => EditMaxLengthInline(prop))" 
                                                      @onclick:stopPropagation="true"
                                                      title="Click to edit"
                                                      style="cursor: pointer;">
                                                    @prop.MaxLength
                                                </span>
                                            }
                                        }
                                    </td>
                                    @if (_viewMode == "expanded") {
                                        <td>
                                            @if (_inlineEditingMaxLengthId == prop.Id) {
                                                <input type="number" class="form-control form-control-sm" style="width: 70px;"
                                                       value="@prop.MaxLength" 
                                                       @onchange="@(e => SaveMaxLengthInline(prop, e))"
                                                       @onblur="CancelInlineEdit" />
                                            } else {
                                                <span class="editable-value" @onclick="@(() => EditMaxLengthInline(prop))" 
                                                      style="cursor: pointer;" title="Click to edit">
                                                    @(prop.MaxLength?.ToString() ?? "-")
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <div class="small">@if (prop.DefaultValue != null) { <strong>@prop.DefaultValue</strong> }</div>
                                        </td>
                                    }
                                    <td class="text-center">
                                        @if (!prop.IsPrimaryKey) {
                                            <button class="btn btn-sm p-0 required-toggle @(prop.IsRequired ? "text-success" : "text-muted")"
                                                    @onclick="@(() => ToggleRequired(prop))"
                                                    title="@(prop.IsRequired ? "Required - click to make optional" : "Optional - click to make required")">
                                                @if (prop.IsRequired) {
                                                    <i class="fa-solid fa-check-circle"></i>
                                                } else {
                                                    <i class="fa-regular fa-circle"></i>
                                                }
                                            </button>
                                        } else {
                                            <i class="fa-solid fa-check text-success" title="Primary keys are always required"></i>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (!prop.IsPrimaryKey) {
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-primary" 
                                                        @onclick="() => EditProperty(prop)"
                                                        title="Edit all properties">
                                                    <i class="fa-solid fa-pen"></i>
                                                </button>
                                                <button class="btn btn-outline-secondary" 
                                                        @onclick="() => DuplicateProperty(prop)"
                                                        title="Duplicate">
                                                    <i class="fa-solid fa-copy"></i>
                                                </button>
                                                <button class="btn btn-outline-danger" 
                                                        @onclick="() => DeleteProperty(prop)"
                                                        title="Delete">
                                                    <i class="fa-solid fa-trash"></i>
                                                </button>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @* Enums Section *@
        @if (Enums.Count > 0) {
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>
                        <i class="fa-solid fa-list me-1"></i>
                        Defined Enums (@Enums.Count)
                    </span>
                    <button class="btn btn-sm btn-outline-primary" @onclick="AddEnum">
                        <i class="fa-solid fa-plus me-1"></i>
                        Add Enum
                    </button>
                </div>
                <div class="card-body p-0">
                    <table class="table table-sm mb-0">
                        <tbody>
                            @foreach (var enumDef in Enums) {
                                <tr>
                                    <td>
                                        <strong>@enumDef.Name</strong>
                                    </td>
                                    <td>
                                        <code class="small">@string.Join(", ", enumDef.Values)</code>
                                    </td>
                                    <td style="width: 80px;">
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary" 
                                                    @onclick="() => EditEnum(enumDef)">
                                                <i class="fa-solid fa-pen"></i>
                                            </button>
                                            <button class="btn btn-outline-danger" 
                                                    @onclick="() => DeleteEnum(enumDef)">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    @* ============================================================ *@
    @* RIGHT SIDEBAR: Snippets + Summary *@
    @* ============================================================ *@
    <div class="col-lg-5">
        @* Snippets Panel *@
        <div class="card mb-3 border-primary">
            <div class="card-header bg-primary text-white">
                <i class="fa-solid fa-puzzle-piece me-1"></i>
                Quick Add Snippets
            </div>
            <div class="card-body p-2">
                <div class="snippets-grid">
                    @foreach (var snippet in DataObjects.PropertySnippets.All) {
                        <div class="snippet-card" @onclick="() => InsertSnippet(snippet)">
                            <div class="snippet-icon">
                                <i class="fa-solid @snippet.Icon"></i>
                            </div>
                            <div class="snippet-info">
                                <div class="snippet-name">@snippet.Name</div>
                                <div class="snippet-desc">@snippet.Description</div>
                            </div>
                            <div class="snippet-action">
                                <i class="fa-solid fa-plus-circle text-primary"></i>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        @* Summary Panel *@
        <div class="card bg-light mb-3">
            <div class="card-header">
                <i class="fa-solid fa-chart-pie text-info me-1"></i>
                Schema Summary
            </div>
            <div class="card-body py-2">
                <div class="row small">
                    <div class="col-6 mb-2">
                        <i class="fa-solid fa-list-check text-primary me-1"></i>
                        <strong>@Properties.Count</strong> properties
                    </div>
                    <div class="col-6 mb-2">
                        <i class="fa-solid fa-asterisk text-danger me-1"></i>
                        <strong>@Properties.Count(p => p.IsRequired)</strong> required
                    </div>
                    <div class="col-6 mb-2">
                        <i class="fa-solid fa-font text-success me-1"></i>
                        <strong>@Properties.Count(p => p.Type == "string")</strong> strings
                    </div>
                    <div class="col-6 mb-2">
                        <i class="fa-solid fa-list text-danger me-1"></i>
                        <strong>@Enums.Count</strong> enums
                    </div>
                    <div class="col-6 mb-2">
                        <i class="fa-solid fa-cog text-muted me-1"></i>
                        <strong>@Properties.Count(p => p.IsSystemField)</strong> system
                    </div>
                    <div class="col-6 mb-2">
                        <i class="fa-solid fa-filter text-info me-1"></i>
                        <strong>@Properties.Count(p => p.IsFilterable)</strong> filterable
                    </div>
                </div>
            </div>
        </div>

        @* Live Code Preview *@
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>
                    <i class="fa-solid fa-code text-info me-1"></i>
                    Live Preview
                </span>
                <button type="button" class="btn btn-sm btn-outline-secondary" 
                        @onclick="() => _showPreview = !_showPreview">
                    <i class="fa-solid @(_showPreview ? "fa-chevron-up" : "fa-chevron-down")"></i>
                </button>
            </div>
            @if (_showPreview) {
                <div class="card-body p-0">
                    <FreeManager_App_EntityWizardLivePreview EntityName="@EntityName"
                                                  PluralName="@(EntityName + "s")"
                                                  PrimaryKeyName="@(EntityName + "Id")"
                                                  PrimaryKeyType="@PrimaryKeyType"
                                                  Properties="Properties"
                                                  Enums="Enums" />
                </div>
            }
        </div>
    </div>
</div>

@* Property Editor Modal *@
<FreeManager_App_EntityWizardPropertyEditor IsOpen="_showPropertyModal"
                                 IsOpenChanged="OnPropertyModalChanged"
                                 Property="_editingProperty"
                                 PropertyChanged="OnPropertyChanged"
                                 Enums="Enums"
                                 OnSave="SaveProperty"
                                 OnAddEnum="AddEnumFromProperty" />

