@* FreeGLBA.App.EditAccessEvent.razor - Edit/Create form for AccessEvent *@
@* Generated by Entity Builder Wizard *@
@inject HttpClient Http

<div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fa-solid @(IsNew ? "fa-plus" : "fa-pen") me-2"></i>
                    @(IsNew ? "New" : "Edit") AccessEvent
                </h5>
                <button type="button" class="btn-close" @onclick="Cancel"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="Item" OnValidSubmit="Save">
                    <DataAnnotationsValidator />
                    <div class="mb-3">
                        <label class="form-label">SourceSystem <span class="text-danger">*</span></label>
                        <select class="form-select" @bind="Item.SourceSystemId">
                            @foreach (var parent in _sourcesystemList) {
                                <option value="@parent.SourceSystemId">@parent.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">SourceEventId</label>
                        <input type="text" class="form-control" @bind="Item.SourceEventId" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">AccessedAt <span class="text-danger">*</span></label>
                        <input type="datetime-local" class="form-control" @bind="Item.AccessedAt" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">ReceivedAt <span class="text-danger">*</span></label>
                        <input type="datetime-local" class="form-control" @bind="Item.ReceivedAt" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">UserId <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" @bind="Item.UserId" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">UserName</label>
                        <input type="text" class="form-control" @bind="Item.UserName" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">UserEmail</label>
                        <input type="text" class="form-control" @bind="Item.UserEmail" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">UserDepartment</label>
                        <input type="text" class="form-control" @bind="Item.UserDepartment" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">SubjectId <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" @bind="Item.SubjectId" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">SubjectType</label>
                        <input type="text" class="form-control" @bind="Item.SubjectType" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">DataCategory</label>
                        <input type="text" class="form-control" @bind="Item.DataCategory" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">AccessType <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" @bind="Item.AccessType" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Purpose</label>
                        <textarea class="form-control" rows="3" @bind="Item.Purpose"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">IpAddress</label>
                        <input type="text" class="form-control" @bind="Item.IpAddress" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">AdditionalData</label>
                        <input type="text" class="form-control" @bind="Item.AdditionalData" />
                    </div>
                </EditForm>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="Save">Save</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public DataObjects.AccessEvent Item { get; set; } = new();
    [Parameter] public EventCallback<DataObjects.AccessEvent> OnSave { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private List<DataObjects.SourceSystem> _sourcesystemList = new();
    private bool IsNew => Item.AccessEventId == default;

    protected override async Task OnInitializedAsync() {
        var sourcesystemResult = await Helpers.GetOrPost<DataObjects.SourceSystemFilterResult>(
            DataObjects.Endpoints.FreeGLBA.GetSourceSystems, new DataObjects.SourceSystemFilter { PageSize = 1000 }) ?? new();
        _sourcesystemList = sourcesystemResult.Records;
    }

    private async Task Save() => await OnSave.InvokeAsync(Item);
    private async Task Cancel() => await OnCancel.InvokeAsync();
}
