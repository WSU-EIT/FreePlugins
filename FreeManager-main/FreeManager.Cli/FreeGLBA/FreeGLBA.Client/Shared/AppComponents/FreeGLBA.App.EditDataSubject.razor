@* FreeGLBA.App.EditDataSubject.razor - Edit/Create form for DataSubject *@
@* Generated by Entity Builder Wizard *@

<div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fa-solid @(IsNew ? "fa-plus" : "fa-pen") me-2"></i>
                    @(IsNew ? "New" : "Edit") DataSubject
                </h5>
                <button type="button" class="btn-close" @onclick="Cancel"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="Item" OnValidSubmit="Save">
                    <DataAnnotationsValidator />
                    <div class="mb-3">
                        <label class="form-label">ExternalId <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" @bind="Item.ExternalId" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">SubjectType</label>
                        <input type="text" class="form-control" @bind="Item.SubjectType" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">FirstAccessedAt <span class="text-danger">*</span></label>
                        <input type="datetime-local" class="form-control" @bind="Item.FirstAccessedAt" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">LastAccessedAt <span class="text-danger">*</span></label>
                        <input type="datetime-local" class="form-control" @bind="Item.LastAccessedAt" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">TotalAccessCount</label>
                        <input type="number" class="form-control" @bind="Item.TotalAccessCount" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">UniqueAccessorCount</label>
                        <input type="number" class="form-control" @bind="Item.UniqueAccessorCount" />
                    </div>
                </EditForm>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="Save">Save</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public DataObjects.DataSubject Item { get; set; } = new();
    [Parameter] public EventCallback<DataObjects.DataSubject> OnSave { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private bool IsNew => Item.DataSubjectId == default;

    private async Task Save() => await OnSave.InvokeAsync(Item);
    private async Task Cancel() => await OnCancel.InvokeAsync();
}
