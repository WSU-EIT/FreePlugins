@* FreeGLBA.App.EditSourceSystem.razor - Edit/Create form for SourceSystem *@
@* Generated by Entity Builder Wizard *@

<div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fa-solid @(IsNew ? "fa-plus" : "fa-pen") me-2"></i>
                    @(IsNew ? "New" : "Edit") SourceSystem
                </h5>
                <button type="button" class="btn-close" @onclick="Cancel"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="Item" OnValidSubmit="Save">
                    <DataAnnotationsValidator />
                    <div class="mb-3">
                        <label class="form-label">Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" @bind="Item.Name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">DisplayName</label>
                        <input type="text" class="form-control" @bind="Item.DisplayName" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">ApiKey <span class="text-danger">*</span></label>
                        <textarea class="form-control" rows="3" @bind="Item.ApiKey"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">ContactEmail</label>
                        <input type="text" class="form-control" @bind="Item.ContactEmail" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">IsActive</label>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" @bind="Item.IsActive" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">LastEventReceivedAt</label>
                        <input type="text" class="form-control" @bind="Item.LastEventReceivedAt" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">EventCount</label>
                        <input type="number" class="form-control" @bind="Item.EventCount" />
                    </div>
                </EditForm>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="Save">Save</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public DataObjects.SourceSystem Item { get; set; } = new();
    [Parameter] public EventCallback<DataObjects.SourceSystem> OnSave { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private bool IsNew => Item.SourceSystemId == default;

    private async Task Save() => await OnSave.InvokeAsync(Item);
    private async Task Cancel() => await OnCancel.InvokeAsync();
}
